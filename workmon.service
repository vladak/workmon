[Unit]
Description=Work monitoring Service

[Service]
User=root
Group=root
Type=simple
WorkingDirectory=/srv/workmon
EnvironmentFile=/srv/workmon/environment
ExecStart=su -c "/srv/workmon/env/bin/python3 /srv/workmon/workmon.py $ARGS" - pi
ExecStop=/bin/kill -2 $MAINPID
TimeoutStartSec=0
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
